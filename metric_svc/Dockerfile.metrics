FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy service code
COPY metrics_service.py .

# Expose service port
EXPOSE 8001

# Run FastAPI app
CMD ["uvicorn", "metrics_service:app", "--host", "0.0.0.0", "--port", "8001"]
